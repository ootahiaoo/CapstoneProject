<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="android:windowExitTransition">@transition/fade_transition</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme">
        <item name="android:windowEnterAnimation">@transition/fade_transition</item>
        <item name="android:windowExitTransition">@transition/slide_right_transition</item>
        <item name="android:windowReenterTransition">@transition/slide_left_transition</item>
    </style>

    <style name="AppTheme.Bookmark" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/fade_transition</item>
        <item name="android:windowExitTransition">@transition/slide_left_transition</item>
    </style>


    <style name="TitleStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>
</resources>